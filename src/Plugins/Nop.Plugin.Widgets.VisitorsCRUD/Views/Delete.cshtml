@model Nop.Plugin.Widgets.VisitorsCrud.Models.ConfigurationModel

@{
    Layout = "_ConfigurePlugin";
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Widgets.VisitorsCrud");
}

<h1>Details</h1>

<div>
    <h4>Visitor</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Age</dt>
        <dd class="col-sm-10">@Model.Age</dd>
        <dt class="col-sm-2">Gender</dt>
        <dd class="col-sm-10">@Model.Gender</dd>
        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
    </dl>

    <form asp-controller="WidgetsVisitorsCrud" asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Edit" method="Get" class="btn btn-primary">Edit</a> |
        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this author? Deleting the author will delete all the books written by this author.');" /> |
        <a asp-action="Configure" class="btn btn-dark">Back to List</a>
    </form>
</div>